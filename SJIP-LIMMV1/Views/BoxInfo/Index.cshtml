@model SJIP_LIMMV1.Models.BoxInfoViewModel


@{
    ViewBag.Title = "Index";
}

<h2>Register Box</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "BoxInfo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.LMPDNum, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LMPDNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.LMPDNum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SimNum, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SimNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SimNum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telco, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @{ var selectTelco = Model.telco.Select(s => new SelectListItem { Value = s, Text = s }).ToList(); }
                        @Html.DropDownListFor(m => m.Telco, selectTelco, new { @name = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telco, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @{ var selectJSONID = Model.JSONIDNUM.Select(s => new SelectListItem { Value = s, Text = s }).ToList(); }
                        @Html.DropDownListFor(m => m.Telco, selectJSONID, new { @name = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>

